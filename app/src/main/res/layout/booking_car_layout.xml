<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/confirm_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:background="@color/grayWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/nameCar_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">
            <Button
                android:id="@+id/back_imageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/before"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="THUÊ XE"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_3"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameCar_bar"
            android:padding="8dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin xe"
                    android:textSize="@dimen/text_size_3"
                    android:textColor="@color/black"
                    android:paddingLeft="8dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/image_car_carview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_alignParentLeft="true">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="90dp"
                            android:src="@drawable/bmw_m5_img"/>
                    </androidx.cardview.widget.CardView>
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/image_car_carview">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BMW M5 G-Power"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_3"
                            android:paddingLeft="8dp"/>
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thông tin"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_2"
                                android:paddingLeft="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="......."
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_2"
                                android:paddingLeft="8dp"/>
                        </TableRow>

                    </TableLayout>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin khách hàng"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3"
                    android:paddingLeft="8dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/image_userAvatar_carview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="12dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/user_avatar"/>
                    </androidx.cardview.widget.CardView>
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/image_userAvatar_carview">
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Họ Tên"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_2"
                                android:paddingLeft="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nguyễn Văn A"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_2"
                                android:paddingLeft="8dp"
                                android:maxLines="3"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CCCD"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_2"
                                android:paddingLeft="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="086946007758"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_2"
                                android:paddingLeft="8dp"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày sinh"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_2"
                                android:paddingLeft="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10/09/1998"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_2"
                                android:paddingLeft="8dp"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SĐT"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_2"
                                android:paddingLeft="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0789678569"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_2"
                                android:paddingLeft="8dp"/>
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grayWhite">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="250.000 VNĐ/Ngày"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_3" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radius_top_left"
            android:backgroundTint="@color/blue">

            <TextView
                android:id="@+id/confirm_text_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Xác nhận"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_3" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>